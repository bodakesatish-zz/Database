<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecd881"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hvdesai.register.ActivityRegister">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="#478302"
            android:gravity="center"
            android:text="Desai College"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Registration Form"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_txt"
            android:text="Name :"
            android:textColor="#541360"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:hint="Enter your name here"
            android:padding="5dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_name"
            android:layout_marginTop="10dp"
            android:text="Email :"
            android:textColor="#541360"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_email"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:hint="Enter your email here"
            android:padding="5dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_email"
            android:layout_marginTop="10dp"
            android:text=" Please Select your country name"
            android:textColor="#541360"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinn_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_country" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinn_country"
            android:layout_marginTop="10dp"
            android:text="Phone Number :"
            android:textColor="#541360"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_phone"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:hint="Enter your mobile number here"
            android:inputType="phone"
            android:padding="5dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_phone"
            android:layout_marginTop="10dp"
            android:text="Please enter your Password :"
            android:textColor="#541360"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_pass"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:hint="Enter your password here"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_password"
            android:layout_marginTop="10dp"
            android:text="Please confirm your Password :"
            android:textColor="#541360"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_confirm_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_confirm_password"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:hint="Confirm your password here"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_confirm_password"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:background="@color/colorAccent"
            android:text="Register"
            android:textColor="#ffffff"
            android:textStyle="bold"

            />

    </RelativeLayout>
</ScrollView>
